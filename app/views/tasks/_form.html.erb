<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title%>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <% unless f.object.new_record? %>
          <div class="checkbox">
            <label>
              <%= f.check_box :completed %> Completed
            </label>
          </div>
        <% end %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
    <% end %>

    <%= link_to tasks_path(@task) do %>
    <i class="fa-regular fa-chevron-left"></i> Go back to list
    <% end %>
  </div>
</div>
