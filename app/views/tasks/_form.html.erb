<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless f.object.new_record? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :completed %> Completed
        </label>
      </div>
    <% end %>
    <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>

<%= link_to "Back to list", tasks_path(@task) %>
